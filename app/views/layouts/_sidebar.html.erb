<div id="sidebar" class="sidebar responsive" data-sidebar="true" data-sidebar-scroll="true" data-sidebar-hover="true">
	<ul class="nav nav-list" style="top: 0px;">

		<li class="active open">
			<a href="#" >
				<i class="menu-icon fa fa-list"></i>
				<span class="menu-text"> Registros </span>

				<b class="arrow fa fa-angle-down"></b>
			</a>

			<b class="arrow"></b>

			<ul class="submenu">
				<li class="<%= 'active' if current_page?(day_records_path) || current_page?(authenticated_root_path) %>">
          <%= link_to day_records_path do %>
            <i class="menu-icon fa fa-caret-right"></i>
            Relatório
          <% end %>

					<b class="arrow"></b>
				</li>

				<li class="<%= 'active' if current_page?(new_day_record_path) %>">
          <%= link_to new_day_record_path do %>
            <i class="menu-icon fa fa-caret-right"></i>
            Novo Registro
          <% end %>

					<b class="arrow"></b>
				</li>
			</ul>
		</li>
		<li class="active open">
			<a href="#" >
				<i class="menu-icon fa fa-archive"></i>
				<span class="menu-text"> Fechamentos </span>

				<b class="arrow fa fa-angle-down"></b>
			</a>

			<b class="arrow"></b>

			<ul class="submenu">
				<li class="<%= 'active' if current_page?(closures_path) %>">
          <%= link_to closures_path do %>
            <i class="menu-icon fa fa-caret-right"></i>
            Listar
          <% end %>

					<b class="arrow"></b>
				</li>

				<li class="<%= 'active' if current_page?(new_closure_path) %>">
          <%= link_to new_closure_path do %>
            <i class="menu-icon fa fa-caret-right"></i>
            Novo Fechamento
          <% end %>

					<b class="arrow"></b>
				</li>
			</ul>
		</li>
	</ul><!-- /.nav-list -->
	<div class="navbar-footer">
		<div class="infobox <%= get_dashboard_color(dashboard.total_balance) %>">
			<div class="infobox-icon">
				<i class="ace-icon fa <%= get_icon_balance(dashboard.total_balance) %>"></i>
			</div>
			<div class="infobox-data">
				<span class="infobox-data-number"><%= dashboard.total_balance.to_s %></span>
				<div class="infobox-content">Saldo de horas
					<a class="balance-info" tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-content="O Saldo de horas é contabilizado à partir do seu último Fechamento informado." title="Saldo de horas">
						<i class="fa fa-question-circle"></i>
					</a>
				</div>
			</div>
		</div>

		<div class="infobox infobox-blue">
			<div class="infobox-icon">
				<i class="ace-icon fa fa-user"></i>
			</div>

			<div class="infobox-data">
				<span class="infobox-data-number"><%= current_user.current_account.workload.to_s(:time) %></span>
				<div class="infobox-content">Jornada de trabalho</div>
			</div>
		</div>

		<div class="infobox infobox-pink">
			<div class="infobox-icon">
				<i class="ace-icon fa fa-sign-out"></i>
			</div>

			<div class="infobox-data">
				<span class="infobox-data-number"><%= dashboard.departure_time.to_s(:time) %></span>
				<div class="infobox-content">Previsão de saída
					<a class="departure-info" tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-content="A previsão de saída utiliza o tempo médio de almoço que você informar nas configurações, enquanto você não registrar uma Entrada 2." title="Previsão de saída">
						<i class="fa fa-question-circle"></i>
					</a>
				</div>
			</div>
		</div>

		<div class="infobox infobox-blue2">
			<div class="infobox-progress">
				<div class="easy-pie-chart percentage" data-percent="<%= dashboard.percentage_worked %>" data-size="60" style="height: 60px; width: 60; line-height: 58px;">
					<span class="percent"><%= dashboard.percentage_worked %></span>%
				<canvas height="60" width="60"></canvas></div>
			</div>

			<div class="infobox-data">
				<span class="infobox-data-number info-worked-time"><%= dashboard.total_worked.to_s(:time) %></span>

				<div class="infobox-content">Total de hoje</div>
			</div>
		</div>

		<% if current_user.current_account.warn_rest_period %>
			<div class="infobox infobox-orange2">
				<div class="infobox-icon">
					<i class="ace-icon fa fa-sign-in"></i>
				</div>

				<div class="infobox-data">
					<span class="infobox-data-number"><%= dashboard.next_entrance_time.try(:to_s, :time) || '--:--' %></span>
					<div class="infobox-content">Próxima Entrada
						<a class="departure-info" tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-content="Esta é sua próxima entrada recomendada para não infrigir o Art. 66 da CLT." title="Próxima Entrada">
							<i class="fa fa-question-circle"></i>
						</a>
					</div>
				</div>
			</div>
		<% end %>
	</div>

</div>
